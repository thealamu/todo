{
    "openapi": "3.0.3",
    "info": {
        "title": "To-do API",
        "description": "To-do REST API",
        "contact": {
            "email": "vaguemail369@gmail.com",
            "name": "thealamu",
            "url": "https://dev.to/thealamu"
        },
        "license": {
            "name": "MIT",
            "url": "https://github.com/thealamu/todo/blob/master/LICENSE"
        },
        "version": "0.0.1"
    },
    "servers": [
        {
            "description": "Local To-do API deployment",
            "url": "http://localhost:{port}/v1",
            "variables": {
                "port": {
                    "description": "Port you decide to run the app on",
                    "default": "1028"
                }
            }
        }
    ],
    "components": {
        "schemas": {
            "todo": {
                "title": "To-do item",
                "description": "A to-do item",
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 3
                    },
                    "title": {
                        "type": "string",
                        "example": "Do stuff"
                    },
                    "note": {
                        "type": "string",
                        "example": "Do some stuff at Mr. Foo's Bar"
                    },
                    "done": {
                        "type": "boolean",
                        "default": false
                    }
                },
                "required": [
                    "title",
                    "note"
                ]
            }
        },
        "parameters": {
            "id": {
               "name": "id",
               "in": "path",
               "required": true,
               "schema": {
                   "type": "integer",
                   "example": 3
               } 
            }
        }
    },
    "paths": {
        "/todos": {
            "get": {
                "summary": "All to-do items",
                "description": "Get all to-do items",
                "operationId": "todos/all",
                "responses": {
                    "200": {
                        "description": "List of to-do items",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/todo"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create item",
                "description": "Create a to-do item",
                "operationId": "todos/new",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/todo"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Item created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/todo"
                                }
                            }
                        },
                        "headers": {
                            "Location": {
                                "example": "http://localhost:1028/todos/5",
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/todos/{id}": {
            "get": {
                "summary": "Single to-do item",
                "description": "Get a to-do item",
                "operationId": "todos/single",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A to-do item",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/todo"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}